<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#ed3f3f"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_tv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:text="输入搜索信息"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:textSize="17dp"
        android:background="@drawable/search_home_style"
        android:drawableLeft="@drawable/home_search_icon"/>

    <TextView
        android:id="@+id/message_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:drawableTop="@drawable/community_message_icon"/>

</LinearLayout>